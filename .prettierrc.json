{
  "$schema": "http://json.schemastore.org/prettierrc",
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "endOfLine": "auto",
  "bracketSpacing": true,
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.scss", "*.css"],
      "options": {
        "tabWidth": 4
      }
    }
  ],
  "tailwindConfig": "./tailwind.config.js",
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
